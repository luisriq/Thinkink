<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"

            android:adjustViewBounds="true"
            android:background="@color/imageBorder"
            android:padding="1dp"
            android:id="@+id/imagenCard"
            android:src="@drawable/horacio" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="left"
            android:id="@+id/imageUsuerGallery"
            android:src="@drawable/yo"
            android:layout_below="@+id/imagenCard"
            android:layout_alignLeft="@+id/imagenCard"
            android:layout_alignStart="@+id/imagenCard"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView2"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/nombre_usuario"
            android:layout_toRightOf="@+id/imageUsuerGallery"
            android:layout_toLeftOf="@+id/btn_like"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Teasdasdasdaxt"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/nombre_usuario"
            android:layout_gravity="center_horizontal|bottom"

            android:layout_alignTop="@+id/imageUsuerGallery"
            android:layout_toRightOf="@+id/imageUsuerGallery"
            android:layout_toLeftOf="@+id/btn_like"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:src="@drawable/like_gris"
            android:adjustViewBounds="true"
            android:layout_below="@+id/imageUsuerGallery"
            android:layout_alignRight="@+id/imagenCard"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:text="1326546"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/cantidadLikes"
            android:layout_marginRight="5dp"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignTop="@+id/btn_like"
            android:gravity="bottom"
            android:layout_alignBottom="@+id/btn_like" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
